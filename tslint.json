{
  "rulesDirectory": ["codelyzer", "vrsource-tslint-rules", "tslint-eslint-rules"],
  "rules": {
    "align": [true, "arguments", "elements", "members", "parameters", "statements"],
    "arrow-return-shorthand": true,
    "await-promise": true,
    "binary-expression-operand-order": true,
    "callable-types": true,
    "comment-format": [true, "check-space"],
    "conditional-expression-parens": false,
    "curly": true,
    "encoding": true,
    "eofline": true,
    "forin": true,
    "import-blacklist": [true, "rxjs"],
    "import-spacing": true,
    "interface-over-type-literal": true,
    "jsdoc-format": true,
    "label-position": true,
    "max-line-length": [true, 140],
    "member-access": true,
    "member-ordering": [
      true,
      {
        "order": ["static-field", "instance-field", "constructor", "static-method", "instance-method"]
      }
    ],
    "new-parens": true,
    "no-angle-bracket-type-assertion": true,
    "no-arg": true,
    "no-boolean-literal-compare": true,
    "no-console": [true, "debug", "info", "time", "timeEnd", "trace"],
    "no-conditional-assignment": true,
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-imports": true,
    "no-duplicate-super": true,
    "no-duplicate-variable": true,
    "no-empty": false,
    "no-empty-interface": true,
    "no-eval": true,
    // "no-increment-decrement": true,
    "no-inferrable-types": [true, "ignore-params", "ignore-properties"],
    "no-inferred-empty-object-type": true,
    "no-invalid-template-strings": true,
    "no-invalid-this": true,
    "no-non-null-assertion": false,
    "no-null-keyword": true,
    "no-object-literal-type-assertion": true,
    "no-reference": true,
    "no-shadowed-variable": true,
    "no-sparse-arrays": true,
    "no-string-literal": false,
    "no-string-throw": true,
    "no-switch-case-fall-through": true,
    "no-trailing-whitespace": [true, "ignore-template-strings"],
    "no-unused-expression": true,
    "no-unused-variable": false,
    "no-use-before-declare": false,
    "no-var-keyword": true,
    "number-literal-format": true,
    "object-literal-sort-keys": false,
    "one-line": [true, "check-catch", "check-finally", "check-else", "check-open-brace", "check-whitespace"],
    "one-variable-per-declaration": [true, "ignore-for-loop"],
    "only-arrow-functions": [true, "allow-declarations"],
    "prefer-conditional-expression": false,
    "prefer-const": true,
    "prefer-object-spread": true,
    "promise-function-async": true,
    "quotemark": [true, "double", "avoid-escape"],
    "radix": true,
    "restrict-plus-operands": true,
    "semicolon": [true, "always"],
    "space-before-function-paren": [
      true,
      {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always",
        "method": "never",
        "constructor": "never"
      }
    ],
    "trailing-comma": true,

    "triple-equals": [true, "allow-undefined-check"],
    "type-literal-delimiter": true,
    "typedef": [true, "call-signature", "parameter", "member-variable-declaration"],
    "typeof-compare": true,
    "unified-signatures": true,
    "use-default-type-parameter": true,
    "variable-name": [true, "ban-keywords", "check-format", "allow-pascal-case", "allow-leading-underscore"],
    "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-module", "check-separator"],
    "no-var-requires": true,
    "directive-selector": false,
    "component-selector": false,
    "use-host-property-decorator": false,
    "no-input-rename": false,
    "no-output-rename": false,
    "use-life-cycle-interface": true,
    "use-pipe-transform-interface": true,
    "component-class-suffix": false,
    "directive-class-suffix": false,
    "no-access-missing-member": false
  },
  "linterOptions": {
    "exclude": [
      "**/node_modules/**",
      "./e2e/**",
      "./demo/polyfills.ts",
      "./lib/test.ts",
      "./demo/environments/**",
      "./demo/test.ts",
      "./demo/main.ts",
      "./lib/**/**.spec.ts",
      "./demo/**/**.spec.ts",
      "./demo/typings.d.ts"
    ]
  }
}
